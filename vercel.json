{
  "cleanUrls": true,
  "trailingSlash": false,
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  },
  "redirects": [
    {
      "source": "/login",
      "destination": "/public/login.html",
      "permanent": false
    },
    {
      "source": "/dashboard",
      "destination": "/public/dashboard.html",
      "permanent": false
    },
    {
      "source": "/form-complete",
      "destination": "/public/form-complete.html",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/",
      "destination": "/public/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/public/$1"
    }
  ]
}